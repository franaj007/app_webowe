{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",       // Skompilowany JS trafi do katalogu 'dist'
    "rootDir": "./src",       // Źródła są w katalogu 'src'
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "db.ts"] // Uwzględnij src i db.ts w kompilacji
}